<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Store Front</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Group1</th>
    <th>Group2</th>
    <th></th>
  </tr>

<% @menuitems.each do |menuitem| %>
  <tr>
    <td><%= menuitem.name %></td>
    <td><%= menuitem.price %></td>
    <td><%= menuitem.group1 %></td>
    <td><%= menuitem.group2 %></td>
    <td><%= button_to 'Add to Cart', lineitems_path(menuitem_id: menuitem) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Menuitem', new_menuitem_path %>
