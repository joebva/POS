<h1>Orders</h1>

<fieldset>
<legend>Open Orders</legend>
<table>
  <tr>
    <th>Order ID</th>
    <th>Phone number</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.phone_number %></td>
    <td><%= order.address %></td>
    <td><%= link_to 'View', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Void', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

</fieldset>

<%= link_to 'New Order', new_order_path %>
